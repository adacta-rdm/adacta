	"private": true,
	"scripts": {
		"build": "yarn build:routes && yarn build:tsrc && yarn build:relay && yarn build:css && vite build && tsx scripts/build.ts",
		"build:relay": "relay-compiler",
		"build:repo-server": "tsx scripts/build.ts repo-server",
		"build:routes": "tsx scripts/generate-routes.ts",
		"build:tsrc": "tsx scripts/tsrc.ts",
		"build:css": "yarn build:css-tailwind && yarn build:css-sass",
		"build:css-tailwind": "tailwindcss -c ./apps/desktop-app/tailwind.config.js -i apps/desktop-app/src/frontend-tailwind.css -o @/tailwind.dist.css",
		"build:css-sass": "sass --quiet-deps --load-path=node_modules apps/desktop-app/src/frontend-eui.scss:@/eui.dist.css ./apps/desktop-app/src/index.scss:@/index.dist.css ./apps/desktop-app/src/components/timeline/timeline.scss:@/timeline.dist.css ./apps/desktop-app/src/components/spreadsheet/cell.scss:@/cell.dist.css",
		"build:storybook": "yarn build:css && storybook build",
		"dev": "yarn dev:postgres & yarn dev:server & yarn dev:microservices & yarn dev:relay & yarn dev:frontend & yarn dev:routes & yarn dev:css &",
		"dev:css": "yarn build:css-sass --watch & yarn build:css-tailwind --watch &",
		"dev:frontend": "vite",
		"dev:server": "tsx watch apps/repo-server/src/main.ts",
		"dev:microservices": "tsx watch apps/repo-server/dev/microserviceDevServer.ts",
		"dev:postgres": "docker-compose --profile dev down && docker-compose --profile dev up",
		"dev:relay": "relay-compiler --watch",
		"dev:routes": "tsx scripts/generate-routes.ts --watch",
		"dev-dev:server": "yarn dev:postgres & yarn dev:microservices & yarn dev:relay & yarn dev:frontend & yarn dev:routes & yarn dev:css &",
		"storybook": "storybook dev -p 6006 --no-open & yarn build:css --watch & yarn dev:relay &",
		"relay": "relay-compiler",
		"test": "vitest --globals",
		"type-check": "tsc",
		"eslint": "eslint . --ext .js,.ts,.tsx",
		"graphql:build": "tsx scripts/graphql/graphql-build.ts --project Repository --bundle apps/repo-server/src/graphql/generated/schema.graphql --buildDir apps/repo-server/graphql --tsSchema apps/repo-server/src/graphql/generated/resolvers.ts --tsRequests apps/repo-server/src/graphql/generated/requests.ts",
		"code-style-check": "prettier --check .",
		"prettier": "prettier --write . '!./temp'",
		"push-build": "tsx dev/cli/push-build.ts dist",
		"push-build:staging": "tsx dev/cli/push-build.ts --deploy-staging dist",
		"app-spec:get:staging": "tsx dev/cli/get-app-spec.ts repo-server-staging > staging.spec.json",
		"app-spec:get:prod": "tsx dev/cli/get-app-spec.ts adacta-repo > prod.spec.json",
		"app-spec:deploy:staging": "doctl apps create --upsert --spec staging.spec.json",
		"app:deploy:staging": "tsx dev/cli/create-deployment.ts repo-server-staging",
		"app-spec:clear": "tsx -T dev/cli/clear-app-spec.ts repo-server-staging",
		"gen-doc-id-enum": "tsx scripts/genEDocId.ts",
		"doc": "yarn doc:generate-entrypoint && yarn doc:type-declarations && yarn doc:markdown",
		"doc:generate-entrypoint": "bash ./doc/gen-entrypoint.sh",
		"doc:type-declarations": "tsc --noEmit false --emitDeclarationOnly --declaration --declarationDir ./dist/tsd",
		"doc:markdown": "api-extractor run --local --verbose && api-documenter markdown -i ./temp -o ./doc/pages/api",
		"git:delete-builds": "tsx dev/cli/delete-build.ts"
	},
